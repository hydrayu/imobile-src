<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Flash_Ethernet_Mac_Activity" >

    <TextView
        android:id="@+id/Po_TV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:orientation="vertical" >

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="Show_Mac_Address"
                android:text="Show Mac Address"
                android:textSize="30sp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="Clear_Mac_Address"
                android:text="Clear Mac Address"
                android:textSize="30sp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="Flish_Mac_Address"
                android:text="Flish Mac Address"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Po_Llayout1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Please enter the Mac Address and then click Flish"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mac:"
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/Po_ET1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="00"
                    android:text="00"
                    android:maxLength="2"
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/Po_ET2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="10"
                    android:text="00"
                    android:maxLength="2"
                    
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/Po_ET3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="00"
                    android:text="01"
                    android:maxLength="2"
                    
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/Po_ET4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="00"
                    android:text="02"
                    android:maxLength="2"
                    
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/Po_ET5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="00"
                    android:text="00"
                    android:maxLength="2"
                    
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/Po_ET6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="00"
                    android:text="00"
                    android:maxLength="2"
                    
                    android:textSize="30sp" />
            </LinearLayout>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="Flish"
                android:text="Flish"
                android:textSize="40sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>